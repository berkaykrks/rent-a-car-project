@model IEnumerable<CarRental.Models.Driver>
@{
	ViewData["Title"] = "Driver";
}
<div class="container">
	<div class="row">
		<div class="mt-3 p-3 shadow rounded">
			<div class="d-flex justify-content-between mb-3 p-3">
				<h3 class="text-info">Driver List</h3>
				@Html.ActionLink("Add New Driver","Add","Driver",null, new {@class="btn btn-sm btn-primary"})
			</div>
			<div class="p-3">
				@if (Model != null && Model.Any())
                {
					<table class="table table-responsive table-bordered text-center">
						<thead class="text-info">
							<tr>
								<td>ID</td>
								<td>Driver Name</td>
								<td>Address</td>
								<td>Age</td>
								<td>Experience</td>
								<td>Mobile Number</td>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.DriverName</td>
									<td>@item.Address</td>
									<td>@item.Age</td>
									<td>@item.Experience</td>
									<td>@item.MobileNo</td>
								</tr>
							}
						</tbody>
					</table>				
				}
				else
				{
					<p>No cars available.</p>
				}

			</div>
		</div>
	</div>
</div>
